<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8"
        app:cardElevation="@dimen/cardview_default_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_donate"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/donatetocmsfund"
                />

            <TextView
                android:id="@+id/tv_donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_donate"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:paddingBottom="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8"
                android:textColor="@color/text_color"
                android:textSize="@dimen/item_titlesize"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/donatetocmsreliffund"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
