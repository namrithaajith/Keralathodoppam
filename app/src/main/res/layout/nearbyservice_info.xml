<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    card_view:cardCornerRadius="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_8">


        <!-- logo -->
        <ImageView
            android:id="@+id/personimage"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_120"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/circle"
            android:padding="3dp"
            android:src="@drawable/profile_avatar" />


        <!-- Name -->

        <TextView
            android:id="@+id/personname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/personimage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_toEndOf="@+id/personimage"
            android:layout_toRightOf="@+id/personimage"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/title"
            android:textStyle="bold" />


        <!-- address -->
        <TextView
            android:id="@+id/personphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personname"
            android:layout_toEndOf="@+id/personimage"
            android:layout_toRightOf="@+id/personimage"
            android:textSize="@dimen/subHeader_sp_16"
            android:textStyle="bold"/>

        <!-- rating -->
        <TextView
            android:id="@+id/servicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personphone"
            android:layout_toEndOf="@+id/personimage"
            android:layout_toRightOf="@+id/personimage"
            android:textSize="@dimen/subHeader_sp_16"
            android:textStyle="bold"/>

        <!-- Distance -->
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/servicetype"
            android:layout_toEndOf="@+id/personimage"
            android:layout_toRightOf="@+id/personimage"
            android:textSize="@dimen/normalText_sp_14"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/place"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="44dp"
            android:background="@drawable/button_cornered"
            android:backgroundTint="@color/text_color"
            android:gravity="center"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="@string/call"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/normalText_sp_14"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>