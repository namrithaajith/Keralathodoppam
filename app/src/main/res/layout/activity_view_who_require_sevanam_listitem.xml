<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    card_view:cardCornerRadius="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal"
        android:weightSum="3">


        <!-- logo -->
        <ImageView
            android:id="@+id/personimage"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_120"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/profile_avatar"
            android:layout_weight="1"/>


        <!-- Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/personname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title"
                android:textStyle="bold" />


            <!-- address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearlayoutphone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/personphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subHeader_sp_16"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_16"
                    android:src="@drawable/ic_call"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:id="@+id/phone_number"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subHeader_sp_16"
                android:textStyle="bold"
                android:minLines="4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearlayoutmap"
                android:weightSum="3">
                <TextView
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subHeader_sp_16"
                    android:textStyle="bold"
                    android:text="@string/viewonmap"
                    android:paddingBottom="@dimen/margin_8"
                    android:layout_weight="2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconmap_marker"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/iv_map"
                    android:layout_weight="1"
                    />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>